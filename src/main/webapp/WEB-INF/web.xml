<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    		  			  	 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
		 version="4.0">
		 
  <display-name>MMT-JSF</display-name>
	
  <servlet>
    <servlet-name>facesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>facesServlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  
   <welcome-file-list>
  	<welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>
  
   <!-- For hot deploy (In production set value to "-1") -->
  <context-param>
  	<param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
  	<param-value>0</param-value>
  </context-param>
  
  <!-- For printing debugging information in the pages (In production set to "Production") -->
  <context-param>
  	<param-name>javax.faces.PROJECT_STAGE</param-name>
  	<param-value>Development</param-value>
  </context-param>
  
  <!-- For reducing sent data by removing comments from Facelets pages -->
  <context-param>
  	<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
  	<param-value>true</param-value>
  </context-param>
  
  <!--  -->
  <context-param>
  	<param-name>primefaces.THEME</param-name>
  	<param-value>nova-light</param-value>
  </context-param>
  
</web-app>